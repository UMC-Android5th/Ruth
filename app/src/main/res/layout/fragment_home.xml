            android:src="@drawable/discovery_banner_aos"
            app:layout_constraintTop_toBottomOf="@id/video_singer1"
            app:layout_constraintStart_toStartOf="@id/video_singer1"/>

        <ImageView
            android:id="@+id/banner_ya"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:src="@drawable/img_home_viewpager_exp2"
            app:layout_constraintTop_toBottomOf="@id/banner_flo"/>

        <ImageView
            android:id="@+id/face"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_main_facebook"
