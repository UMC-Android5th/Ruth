            app:layout_constraintStart_toEndOf="@id/today_music"
            app:layout_constraintTop_toTopOf="@id/today_music"/>

        <TextView
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종합"
            android:textColor="@color/indigo"
            android:textSize="15sp"
            android:layout_marginStart="120dp"
            app:layout_constraintStart_toEndOf="@id/arrow_more"
